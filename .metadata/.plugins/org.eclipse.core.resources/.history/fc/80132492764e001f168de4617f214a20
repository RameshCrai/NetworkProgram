package Http;
import java.io.*;
import java.net.*;

public class HttpClient {
    public static void main(String[] args) {
        String serverAddress = "127.0.0.1"; // replace with the correct server address
        int port = 8080; // replace with the correct port
        int retryCount = 3;

        for (int i = 0; i < retryCount; i++) {
            try (Socket socket = new Socket(serverAddress, port)) {
                // Your code to communicate with the server
                System.out.println("Connected to the server");

                break;
            } catch (IOException e) {
                System.err.println("Failed to connect to the server. Attempt " + (i + 1) + " of " + retryCount);
                e.printStackTrace();
                try {
                    Thread.sleep(2000); // wait before retrying
                } catch (InterruptedException ie) {
                    Thread.currentThread().interrupt();
                }
            }
        }
    }
}
